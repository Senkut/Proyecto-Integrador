<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane prefWidth="1280" prefHeight="720"
            stylesheets="@../css/biomedical.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.usta.ui.BiomedicalController">

    <top>
        <Label text="Registro de Equipo Biomédico"
               styleClass="title-label">
            <BorderPane.margin>
                <Insets top="25" bottom="15" left="20" right="20"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <GridPane hgap="12" vgap="18" alignment="CENTER"
                  styleClass="form-container">

            <padding><Insets top="20" bottom="20" left="40" right="40"/></padding>

            <Label text="Serial:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="serialField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       promptText="Ingrese serial" prefWidth="300" styleClass="text-field"/>

            <Label text="Marca:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="brandField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       promptText="Ingrese marca" prefWidth="300" styleClass="text-field"/>

            <Label text="Modelo:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="modelField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       promptText="Ingrese modelo" prefWidth="300" styleClass="text-field"/>

            <Label text="Tipo:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="typeField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                      prefWidth="300" styleClass="combo-box"/>

            <Label text="Estado:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="stateField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                      prefWidth="300" styleClass="combo-box"/>

            <Label text="Proveedor:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="providerField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                      prefWidth="300" styleClass="combo-box"/>

            <Label text="Clase de Riesgo:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="riskClassField" GridPane.rowIndex="6" GridPane.columnIndex="1"
                      prefWidth="300" styleClass="combo-box">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Clase I"/>
                        <String fx:value="Clase IIa"/>
                        <String fx:value="Clase IIb"/>
                        <String fx:value="Clase III"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Certificado Calibración:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="calibrationCertField" GridPane.rowIndex="7" GridPane.columnIndex="1"
                       promptText="Número de certificado" prefWidth="300" styleClass="text-field"/>

            <Label text="Ruta de Imagen:" GridPane.rowIndex="8" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="imagePathField" GridPane.rowIndex="8" GridPane.columnIndex="1"
                       promptText="Opcional" prefWidth="300" styleClass="text-field"/>

            <HBox spacing="15" alignment="CENTER"
                  GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2">

                <Button text="Guardar" onAction="#onGuardar"
                        prefWidth="140" styleClass="primary-button" />
                <Button text="Cancelar" onAction="#onCancelar"
                        prefWidth="140" styleClass="cancel-button" />

            </HBox>

        </GridPane>
    </center>

</BorderPane>