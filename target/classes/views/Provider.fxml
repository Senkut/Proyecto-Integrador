<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.usta.ui.ProviderController"
            prefWidth="600" prefHeight="350">

    <children>

        <VBox spacing="15" layoutX="50" layoutY="40">
            <children>

                <!-- TÍTULO -->
                <Label text="Registrar Proveedor"
                       style="-fx-font-size: 22; -fx-font-weight: bold;" />

                <!-- FORMULARIO -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints minWidth="250"/>
                    </columnConstraints>

                    <children>

                        <!-- Nombre -->
                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- TAX ID -->
                        <Label text="Tax ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="taxIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Email -->
                        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    </children>
                </GridPane>

                <!-- BOTONES -->
                <HBox spacing="15">
                    <children>

                        <Button text="Guardar"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                                onAction="#saveProvider"/>

                        <Button text="Limpiar"
                                style="-fx-background-color: #f4b400; -fx-text-fill: white;"
                                onAction="#clearForm"/>

                    </children>
                </HBox>

            </children>
        </VBox>

        <!-- BOTÓN REGRESAR -->
        <Button text="⟵ Regresar"
                layoutX="480" layoutY="14"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                onAction="#goBack"/>

    </children>

    <padding>
        <Insets top="25" left="25" right="25" bottom="25"/>
    </padding>

</AnchorPane>