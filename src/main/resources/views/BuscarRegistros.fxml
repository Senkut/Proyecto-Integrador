<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane prefWidth="1280" prefHeight="720"
            style="-fx-background-color: linear-gradient(to bottom, #f0f4ff, #ffffff);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.usta.ui.BuscarRegistrosController">

    <!-- HEADER -->
    <top>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="35" bottom="20"/>
            </padding>

            <Label text="Buscar Registros"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Rectangle width="300" height="3"
                       style="-fx-fill: #4a4eff; -fx-arc-height: 10; -fx-arc-width: 10;"/>
        </VBox>
    </top>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 20;">
            
            <!-- Filtros -->
            <HBox spacing="15" alignment="CENTER">
                <ComboBox fx:id="typeSelector"
                          promptText="Seleccionar categorÃ­a"
                          prefWidth="200"/>
                
                <TextField fx:id="searchField"
                           promptText="Buscar por ID, nombre, marca..."
                           prefWidth="350"
                           style="-fx-background-radius: 10; -fx-padding: 8;"/>

                <Button text="Buscar"
                        onAction="#search"
                        prefWidth="130" prefHeight="40"
                        style="-fx-font-size: 16px; -fx-background-color: #4a4eff;
                               -fx-text-fill: white; -fx-background-radius: 12;"/>
            </HBox>

            <!-- Tabla de resultados -->
            <TableView fx:id="resultTable"
                       prefWidth="900" prefHeight="400"
                       style="-fx-background-radius: 12;">
                <columns>
                    <TableColumn text="ID" prefWidth="80"/>
                    <TableColumn text="Nombre" prefWidth="200"/>
                    <TableColumn text="Detalle" prefWidth="300"/>
                    <TableColumn text="Extra" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
