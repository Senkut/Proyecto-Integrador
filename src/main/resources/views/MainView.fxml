<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane prefWidth="1280" prefHeight="720"
            style="-fx-background-color: linear-gradient(to bottom, #e8ecff, #f9faff);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.usta.ui.MainMenuController">

    <!-- HEADER -->
    <top>
        <VBox alignment="CENTER" spacing="12">
            <padding>
                <Insets top="40" bottom="10"/>
            </padding>

            <Label text="Sistema de Registros"
                   style="-fx-font-size: 40px; -fx-font-weight: bold;
                          -fx-text-fill: #3b4a73; -fx-font-family: 'Segoe UI';"/>

            <Rectangle width="280" height="4"
                       arcHeight="10" arcWidth="10"
                       style="-fx-fill: linear-gradient(to right, #6a7bff, #8e54ff);"/>
        </VBox>
    </top>

    <!-- CENTRO -->
    <center>
        <VBox alignment="CENTER" spacing="28">
            <padding><Insets top="50" bottom="40"/></padding>

            <!-- BOTÓN ESTILO GLOBAL -->
            <Button text="Registrar Equipo Tecnológico"
                    onAction="#goTech"
                    styleClass="menu-btn"/>

            <Button text="Registrar Equipo Biomédico"
                    onAction="#goBio"
                    styleClass="menu-btn"/>

            <Button text="Registrar Persona"
                    onAction="#goPerson"
                    styleClass="menu-btn"/>

            <Button text="Registrar Proveedor"
                    onAction="#goProvider"
                    styleClass="menu-btn"/>

            <Button text="Buscar Registros"
                    onAction="#goSearch"
                    styleClass="menu-btn"/>
        </VBox>
    </center>

</BorderPane>