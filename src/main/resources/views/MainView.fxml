<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane prefWidth="1280" prefHeight="720"
            style="-fx-background-color: linear-gradient(to bottom, #f0f4ff, #ffffff);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.usta.ui.MainMenuController">

    <!-- HEADER -->
    <top>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="30" bottom="20"/>
            </padding>

            <Label text="Sistema de Registros"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Línea decorativa -->
            <Rectangle width="300" height="3"
                       style="-fx-fill: #5a7dff; -fx-arc-height: 10; -fx-arc-width: 10;"/>
        </VBox>
    </top>

    <!-- CENTRO -->
    <center>
        <VBox alignment="CENTER" spacing="25">
            <padding>
                <Insets top="40" bottom="40"/>
            </padding>

            <Button text="Registrar Equipo Tecnológico"
                    onAction="#goTech"
                    prefWidth="350" prefHeight="55"
                    style="-fx-font-size: 18px; -fx-background-color: #5a7dff; -fx-text-fill: white;
                           -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, #777, 8, 0, 0, 4);"/>

            <Button text="Registrar Equipo Biomédico"
                    onAction="#goBio"
                    prefWidth="350" prefHeight="55"
                    style="-fx-font-size: 18px; -fx-background-color: #6c63ff; -fx-text-fill: white;
                           -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, #777, 8, 0, 0, 4);"/>

            <Button text="Registrar Persona"
                    onAction="#goPerson"
                    prefWidth="350" prefHeight="55"
                    style="-fx-font-size: 18px; -fx-background-color: #7b5cff; -fx-text-fill: white;
                           -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, #777, 8, 0, 0, 4);"/>

            <Button text="Registrar Proveedor"
                    onAction="#goProvider"
                    prefWidth="350" prefHeight="55"
                    style="-fx-font-size: 18px; -fx-background-color: #8e54ff; -fx-text-fill: white;
                           -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, #777, 8, 0, 0, 4);"/>
        </VBox>
    </center>

</BorderPane>