<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefWidth="900" prefHeight="650"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.usta.ui.PersonController"
            style="-fx-background-color: #f0f4ff;">


    <!-- ðŸ”µ BotÃ³n regresar arriba -->
    <top>
        <HBox style="-fx-padding: 20;">
            <Button text="â®œ Regresar"
                    onAction="#goBack"
                    style="-fx-background-color: #dddddd;
                           -fx-background-radius: 10;
                           -fx-font-size: 14px;
                           -fx-text-fill: black;"/>
        </HBox>
    </top>


    <center>
        <GridPane hgap="20" vgap="25" alignment="CENTER"
                  style="-fx-background-color: white; -fx-background-radius: 15;
                         -fx-padding: 40;">
            
            <Label text="Nombre completo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="fullnameField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       prefWidth="300" promptText="Ingrese el nombre completo"/>

            <Label text="Documento:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="documentField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       prefWidth="300" promptText="Ingrese documento"/>

            <Label text="Rol:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="roleField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                      prefWidth="300"/>

            <Button text="Guardar" onAction="#savePerson"
                    GridPane.rowIndex="3" GridPane.columnIndex="0"
                    style="-fx-background-color: #5a7dff; -fx-text-fill: white;"/>

            <Button text="Cancelar" onAction="#cancel"
                    GridPane.rowIndex="3" GridPane.columnIndex="1"
                    style="-fx-background-color: #ff5a5a; -fx-text-fill: white;"/>
        </GridPane>
    </center>

</BorderPane>